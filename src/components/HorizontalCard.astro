---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
---

<div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url} target={target}>
    <div class="flex flex-col gap-3 p-4">
      
      <div class="flex flex-row flex-nowrap items-center gap-3">
        {
          img && (
            <Image
              src={img}
              width={750}
              height={422}
              format="webp"
              alt={title}
              class="w-[3.5rem] sm:w-[5rem] md:w-[6rem] rounded-lg"
            />
          )
        }
        <h1 class="text-lg sm:text-xl font-bold flex items-center flex-wrap">
          {title}
          {badge && <div class="badge badge-secondary ml-2">{badge}</div>}
        </h1>
      </div>

      <div class="flex flex-col">
        <p class="text-base sm:text-lg">{desc}</p>
        <div class="card-actions justify-end flex-wrap gap-2 mt-2">
          {
            tags &&
              tags.map((tag) => (
                <a href={`${tag_url}/${tag}`} class="badge badge-outline">
                  {tag}
                </a>
              ))
          }
        </div>
      </div>

    </div>
  </a>
</div>